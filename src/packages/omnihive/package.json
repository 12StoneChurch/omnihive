{
    "name": "omnihive",
    "version": "0.0.1",
    "description": "OmniHive Server",
    "license": "MIT",
    "author": {
        "name": "With One Vision Technologies",
        "url": "https://www.withone.vision",
        "email": "developers@withone.vision"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "OmniHive",
        "With One Vision"
    ],
    "main": "./omnihive.js",
    "types": "./omnihive.d.ts",
    "bin": "./omnihive.js",
    "scripts": {
        "build": "concurrently \"yarn run build:package\" \"yarn run build:app\"",
        "build:app": "NODE_ENV=production yarn run webpack --mode production",
        "build:package": "tsc",
        "cli:debug": "nodemon --no-stdin --config ./nodemon.cli.json",
        "cli:taskRunner:debug": "nodemon --no-stdin --config ./nodemon.taskRunner.json",
        "server:debug": "concurrently \"yarn run watch:react\" \"yarn run watch:node\"",
        "server": "concurrently \"yarn run watch:react\" \"cross-env omnihive_settings=\"../../../settings/omnihive_dev_config.json\" yarn node --inspect=127.0.0.1:9228 -r ts-node/register ./omnihive.ts server\"",
        "watch:react": "webpack --watch --mode development",
        "watch:node": "nodemon --no-stdin --config ./nodemon.server.json"
    },
    "dependencies": {
        "@withonevision/omnihive-core": "workspace:*",
        "@withonevision/omnihive-worker-date-dayjs": "4.5.3-dev.5",
        "@withonevision/omnihive-worker-encryption-nodeforge": "workspace:*",
        "@withonevision/omnihive-worker-feature-local": "workspace:*",
        "@withonevision/omnihive-worker-filesystem-fsextra": "workspace:*",
        "@withonevision/omnihive-worker-function-core": "workspace:*",
        "@withonevision/omnihive-worker-graphql-builder-v1": "workspace:*",
        "@withonevision/omnihive-worker-knex-mssql": "4.5.3-dev.5",
        "@withonevision/omnihive-worker-log-core": "workspace:*",
        "@withonevision/omnihive-worker-server-v1": "workspace:*",
        "@withonevision/omnihive-worker-token-jsonwebtoken": "workspace:*",
        "autoprefixer": "10.2.5",
        "body-parser": "1.19.0",
        "chalk": "4.1.0",
        "conf": "9.0.2",
        "cors": "2.8.5",
        "dayjs": "1.10.4",
        "express": "4.17.1",
        "figlet": "1.5.0",
        "fs-extra": "9.1.0",
        "graphql": "15.5.0",
        "helmet": "4.4.1",
        "inquirer": "8.0.0",
        "node-cleanup": "2.1.2",
        "pug": "3.0.2",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "read-pkg-up": "7.0.1",
        "serialize-error": "8.0.1",
        "swagger-ui-express": "4.1.6",
        "tailwindcss": "2.0.3",
        "ws": "7.4.4",
        "yargs": "16.2.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.19.0",
        "@types/cors": "2.8.10",
        "@types/express": "4.17.11",
        "@types/figlet": "1.2.1",
        "@types/fs-extra": "9.0.8",
        "@types/inquirer": "7.3.1",
        "@types/node": "14.14.34",
        "@types/node-cleanup": "2.1.1",
        "@types/react": "17.0.3",
        "@types/react-dom": "17.0.2",
        "@types/swagger-ui-express": "4.1.2",
        "@types/ws": "7.4.0",
        "chai": "4.3.3",
        "concurrently": "6.0.0",
        "cross-env": "7.0.3",
        "css-loader": "5.1.2",
        "nodemon": "2.0.7",
        "postcss": "8.2.8",
        "postcss-loader": "5.2.0",
        "style-loader": "2.0.0",
        "ts-loader": "8.0.18",
        "ts-node": "9.1.1",
        "typescript": "4.2.3",
        "webpack": "5.25.0",
        "webpack-cli": "4.5.0"
    },
    "omniHive": {
        "coreDependencies": {
            "@withonevision/omnihive-core": "workspace:*",
            "@withonevision/omnihive-worker-feature-local": "workspace:*",
            "@withonevision/omnihive-worker-filesystem-fsextra": "workspace:*",
            "@withonevision/omnihive-worker-function-core": "workspace:*",
            "@withonevision/omnihive-worker-log-core": "workspace:*",
            "autoprefixer": "10.2.5",
            "body-parser": "1.19.0",
            "chalk": "4.1.0",
            "conf": "9.0.2",
            "cors": "2.8.5",
            "dayjs": "1.10.4",
            "express": "4.17.1",
            "figlet": "1.5.0",
            "fs-extra": "9.1.0",
            "graphql": "15.5.0",
            "helmet": "4.4.1",
            "inquirer": "8.0.0",
            "node-cleanup": "2.1.2",
            "pug": "3.0.2",
            "react": "17.0.1",
            "react-dom": "17.0.1",
            "read-pkg-up": "7.0.1",
            "serialize-error": "8.0.1",
            "swagger-ui-express": "4.1.6",
            "tailwindcss": "2.0.3",
            "ws": "7.4.4",
            "yargs": "16.2.0"
        },
        "bootWorkers": [
            {
                "name": "ohreqLogWorker",
                "type": "log",
                "package": "@withonevision/omnihive-worker-log-core",
                "version": "",
                "importPath": "@withonevision/omnihive-worker-log-core/index",
                "default": false,
                "enabled": true,
                "metadata": {}
            }
        ],
        "coreWorkers": [
            {
                "name": "ohreqFeatureWorker",
                "type": "feature",
                "package": "@withonevision/omnihive-worker-feature-local",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-feature-local/index",
                "default": false,
                "enabled": true,
                "metadata": {}
            },
            {
                "name": "ohreqFileSystemWorker",
                "type": "fileSystem",
                "package": "@withonevision/omnihive-worker-filesystem-fsextra",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-filesystem-fsextra/index",
                "default": false,
                "enabled": true,
                "metadata": {}
            },
            {
                "name": "ohreqRestSystemAccessToken",
                "type": "restEndpointFunction",
                "package": "@withonevision/omnihive-worker-function-core",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-function-core/SystemAccessTokenWorker",
                "default": false,
                "enabled": true,
                "metadata": {
                    "restMethod": "post",
                    "urlRoute": "token"
                }
            },
            {
                "name": "ohreqRestSystemRegister",
                "type": "restEndpointFunction",
                "package": "@withonevision/omnihive-worker-function-core",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-function-core/SystemRegisterWorker",
                "default": false,
                "enabled": true,
                "metadata": {
                    "restMethod": "post",
                    "urlRoute": "register"
                }
            },
            {
                "name": "ohreqRestSystemRefresh",
                "type": "restEndpointFunction",
                "package": "@withonevision/omnihive-worker-function-core",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-function-core/SystemRefreshWorker",
                "default": false,
                "enabled": true,
                "metadata": {
                    "restMethod": "post",
                    "urlRoute": "refresh"
                }
            },
            {
                "name": "ohreqRestSystemStatus",
                "type": "restEndpointFunction",
                "package": "@withonevision/omnihive-worker-function-core",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-function-core/SystemStatusWorker",
                "default": false,
                "enabled": true,
                "metadata": {
                    "restMethod": "post",
                    "urlRoute": "status"
                }
            }
        ],
        "defaultWorkers": [
            {
                "name": "defaultBuildWorker",
                "type": "graphBuilder",
                "package": "@withonevision/omnihive-worker-graphql-builder-v1",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-graphql-builder-v1/index",
                "default": true,
                "enabled": true,
                "metadata": {
                    "dbWorkers": [
                        "*"
                    ],
                    "urlRoute": "builder1"
                }
            },
            {
                "name": "defaultDateWorker",
                "type": "date",
                "package": "@withonevision/omnihive-worker-date-dayjs",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-date-dayjs/index",
                "default": true,
                "enabled": true,
                "metadata": {
                    "dateFormat": "YYYY-MM-DD hh:mm:ssA"
                }
            },
            {
                "name": "defaultEncryptionWorker",
                "type": "encryption",
                "package": "@withonevision/omnihive-worker-encryption-nodeforge",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-encryption-nodeforge/index",
                "default": true,
                "enabled": true,
                "metadata": {
                    "encryptionKey": "${ohEncryptionKey}"
                }
            },
            {
                "name": "defaultServerWorker",
                "type": "server",
                "package": "@withonevision/omnihive-worker-server-v1",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-server-v1/index",
                "default": true,
                "enabled": true,
                "metadata": {
                    "buildWorkers": [
                        "*"
                    ],
                    "urlRoute": "server1"
                }
            },
            {
                "name": "defaultTokenWorker",
                "type": "token",
                "package": "@withonevision/omnihive-worker-token-jsonwebtoken",
                "version": "workspace:*",
                "importPath": "@withonevision/omnihive-worker-token-jsonwebtoken/index",
                "default": true,
                "enabled": true,
                "metadata": {
                    "audience": "${ohTokenAudience}",
                    "tokenSecret": "${ohTokenSecret}",
                    "expiresIn": "${ohTokenExpiresIn}",
                    "hashAlgorithm": "${ohTokenHashAlgorithm}",
                    "verifyOn": false
                }
            }
        ]
    }
}
