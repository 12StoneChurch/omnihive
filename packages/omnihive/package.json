{
  "name": "@withonevision/omnihive",
  "version": "4.0.0",
  "description": "OmniHive Node Host",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "server-debug": "nodemon --config ./nodemon.server.json"
  },
  "dependencies": {
    "@withonevision/omnihive-common": "^4.0.0",
    "@withonevision/omnihive-worker-cache-nodecache": "^4.0.0",
    "@withonevision/omnihive-worker-date-dayjs": "^4.0.0",
    "@withonevision/omnihive-worker-encryption-nodeforge": "^4.0.0",
    "@withonevision/omnihive-worker-featureflag-launchdarkly-node": "^4.0.0",
    "@withonevision/omnihive-worker-filesystem-fsextra": "^4.0.0",
    "@withonevision/omnihive-worker-function-core": "^4.0.0",
    "@withonevision/omnihive-worker-graphql-builder-v1": "^4.0.0",
    "@withonevision/omnihive-worker-knex-mssql": "^4.0.0",
    "@withonevision/omnihive-worker-log-core": "^4.0.0",
    "@withonevision/omnihive-worker-pubsubclient-pusherjs": "^4.0.0",
    "@withonevision/omnihive-worker-pubsubserver-pusher": "^4.0.0",
    "@withonevision/omnihive-worker-token-jsonwebtoken": "^4.0.0",
    "@withonevision/omnihive-worker-user-auth0": "^4.0.0",
    "apollo-server": "2.19.1",
    "apollo-server-express": "2.19.1",
    "autoprefixer": "10.2.1",
    "body-parser": "1.19.0",
    "change-case": "4.1.2",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql": "15.4.0",
    "helmet": "4.3.1",
    "minimist": "1.2.5",
    "next": "10.0.5",
    "postcss": "8.2.4",
    "postcss-import": "14.0.0",
    "postcss-preset-env": "6.7.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "read-pkg-up": "7.0.1",
    "swagger-ui-express": "4.1.6",
    "tailwindcss": "2.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.9",
    "@types/cross-spawn": "6.0.2",
    "@types/express": "4.17.9",
    "@types/minimist": "1.2.1",
    "@types/node": "14.14.20",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/swagger-ui-express": "4.1.2"
  },
  "omniHive": {
    "coreDependencies": {
      "@withonevision/omnihive-common": "^4.0.0",
      "@withonevision/omnihive-worker-filesystem-fsextra": "^4.0.0",
      "@withonevision/omnihive-worker-function-core": "^4.0.0",
      "@withonevision/omnihive-worker-log-core": "^4.0.0",
      "apollo-server": "2.19.1",
      "apollo-server-express": "2.19.1",
      "autoprefixer": "10.2.1",
      "body-parser": "1.19.0",
      "change-case": "4.1.2",
      "cors": "2.8.5",
      "express": "4.17.1",
      "graphql": "15.4.0",
      "helmet": "4.3.1",
      "minimist": "1.2.5",
      "next": "10.0.5",
      "postcss": "8.2.4",
      "postcss-import": "14.0.0",
      "postcss-preset-env": "6.7.0",
      "react": "17.0.1",
      "react-dom": "17.0.1",
      "read-pkg-up": "7.0.1",
      "swagger-ui-express": "4.1.6",
      "tailwindcss": "2.0.2"
    },
    "coreWorkers": [
      {
        "name": "ohreqFileSystemWorker",
        "type": "fileSystem",
        "package": "@withonevision/omnihive-worker-filesystem-fsextra",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-filesystem-fsextra/index",
        "default": false,
        "enabled": true,
        "metadata": {}
      },
      {
        "name": "ohreqLogWorker",
        "type": "log",
        "package": "@withonevision/omnihive-worker-log-core",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-log-core/index",
        "default": false,
        "enabled": true,
        "metadata": {}
      },
      {
        "name": "ohreqRestSystemAccessToken",
        "type": "restEndpointFunction",
        "package": "@withonevision/omnihive-worker-function-core",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-function-core/SystemAccessTokenWorker",
        "default": false,
        "enabled": true,
        "metadata": {
          "methodUrl": "/accessToken"
        }
      },
      {
        "name": "ohreqRestSystemCheckSettings",
        "type": "restEndpointFunction",
        "package": "@withonevision/omnihive-worker-function-core",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-function-core/SystemCheckSettingsWorker",
        "default": false,
        "enabled": true,
        "metadata": {
          "methodUrl": "/checkSettings"
        }
      },
      {
        "name": "ohreqRestSystemRefresh",
        "type": "restEndpointFunction",
        "package": "@withonevision/omnihive-worker-function-core",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-function-core/SystemRefreshWorker",
        "default": false,
        "enabled": true,
        "metadata": {
          "methodUrl": "/refresh"
        }
      },
      {
        "name": "ohreqRestSystemStatus",
        "type": "restEndpointFunction",
        "package": "@withonevision/omnihive-worker-function-core",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-function-core/SystemStatusWorker",
        "default": false,
        "enabled": true,
        "metadata": {
          "methodUrl": "/status"
        }
      }
    ],
    "defaultWorkers": [
      {
        "name": "defaultBuildWorker",
        "type": "graphBuilder",
        "package": "@withonevision/omnihive-worker-graphql-builder-v1",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-graphql-builder-v1/index",
        "default": true,
        "enabled": true,
        "metadata": {
          "dbWorkers": [
            "*"
          ],
          "graphUrl": "/v1"
        }
      },
      {
        "name": "defaultCacheWorker",
        "type": "cache",
        "package": "@withonevision/omnihive-worker-cache-nodecache",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-cache-nodecache/index",
        "default": true,
        "enabled": true,
        "metadata": {}
      },
      {
        "name": "defaultDateWorker",
        "type": "date",
        "package": "@withonevision/omnihive-worker-date-dayjs",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-date-dayjs/index",
        "default": true,
        "enabled": true,
        "metadata": {
          "dateFormat": "YYYY-MM-DD hh:mm:ssA"
        }
      },
      {
        "name": "defaultEncryptionWorker",
        "type": "encryption",
        "package": "@withonevision/omnihive-worker-encryption-nodeforge",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-encryption-nodeforge/index",
        "default": true,
        "enabled": true,
        "metadata": {
          "encryptionKey": "${OH_DEFAULT_WORKER_ENCRYPTION_KEY}"
        }
      },
      {
        "name": "defaultTokenWorker",
        "type": "token",
        "package": "@withonevision/omnihive-worker-token-jsonwebtoken",
        "version": "^4.0.0",
        "classPath": "@withonevision/omnihive-worker-token-jsonwebtoken/index",
        "default": true,
        "enabled": true,
        "metadata": {
          "audience": "${OH_DEFAULT_WORKER_TOKEN_AUDIENCE}",
          "tokenSecret": "${OH_DEFAULT_WORKER_TOKEN_SECRET}",
          "verifyOn": false
        }
      }
    ]
  }
}
