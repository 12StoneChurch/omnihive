{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "gulp clean-dev",
    "deploy": "gulp clean-prod",
    "reinstall": "lerna clean --yes && lerna bootstrap",
    "test": "OH_ENV_FILE=\"/Library/Application Support/OmniHive/omnihive.env\" nyc mocha -r ts-node/register 'packages/**/tests/**/*.ts' --timeout 5000 --retries 5",
    "server-debug": "cd packages/omnihive && yarn run server-debug"
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "serialize-error": "8.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.14",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.20",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "chai": "4.2.0",
    "del": "6.0.0",
    "eslint": "7.17.0",
    "gulp": "4.0.2",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "mocha": "8.2.1",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}