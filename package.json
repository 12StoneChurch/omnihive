{
  "name": "root",
  "private": true,
  "workspaces": [
    "src/packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "gulp clean-dev",
    "deploy": "gulp clean-prod",
    "reinstall": "lerna clean --yes && lerna bootstrap",
    "test": "nyc mocha -r dotenv/config -r ts-node/register 'packages/**/tests/**/*.ts' --inspect=127.0.0.1:9228 --timeout 5000 --retries 5 --colors",
    "server-debug": "cd packages/omnihive && yarn run server-debug"
  },
  "dependencies": {
    "serialize-error": "8.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@types/chai": "4.2.14",
    "@types/fs-extra": "9.0.6",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.20",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "chai": "4.2.0",
    "del": "6.0.0",
    "dotenv": "8.2.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "gulp": "4.0.2",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "mocha": "8.2.1",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "source-map-support": "0.5.19",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
